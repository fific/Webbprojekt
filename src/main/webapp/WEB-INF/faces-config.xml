<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<!-- Main router -->
<!--ska bytas-->
 <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>home</from-outcome>
        <to-view-id>/index.xhtml</to-view-id>
    </navigation-case>
      
    <navigation-case>
        <from-outcome>register</from-outcome>
        <to-view-id>/partials/users/addUser.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>students</from-outcome>
        <to-view-id>/partials/students/studentList.xhtml</to-view-id>
    </navigation-case>
     <navigation-case>
        <from-outcome>courses</from-outcome>
        <to-view-id>/partials/courses/courseList.xhtml</to-view-id>
    </navigation-case>
     <navigation-case>
        <from-outcome>statistics</from-outcome>
        <to-view-id>/partials/teachers/statistics.xhtml</to-view-id>
    </navigation-case>
</navigation-rule>       
</faces-config>
